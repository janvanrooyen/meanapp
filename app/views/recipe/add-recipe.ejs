<!doctype html>
<div ng-controller="AddRecipeController" ng-cloak>
<form ng-submit="addRecipe()">
  <div class="form-group">
    <label for="title"><h2>Title</h2></label>
    <div id="titleInput">
      <input type="text" class="form-control input-lg" id="Title" name="Title" ng-model="recipeTitle" autofocus placeholder="Add a Title"/>
    </div>
  </div>
  <div class="form-group"> 
    <label for="Ingredients"><h2>Ingredients</h2></label>
    <div class="form-group" ng-repeat="x in ingredients">
      <input type="text" class="form-control input-lg" ng-model="x.value" id="{{x.id}}" placeholder="Enter an Ingredient" set-focus="$index == focusIndex" >
      <button type="button" class="btn btn-warning btn-lg" ng-show="$last" ng-click="addNewIngredient()">Add</button>
      <button type="button" class="btn btn-warning btn-lg" ng-show="$last" ng-click="removeIngredient()">Remove</button>
    </div>
  </div>
  <div class="form-group"> 
    <label for="Ingredients"><h2>Steps</h2></label>
    <div class="form-group" ng-repeat="x in steps">
      <input type="text" class="form-control input-lg" ng-model="x.value" id="{{x.id}}" placeholder="Enter a Step" set-focus="$index == focusIndex">
      <button type="button" class="btn btn-warning btn-lg" ng-show="$last" ng-click="addNewStep()">Add</button>
      <button type="button" class="btn btn-warning btn-lg" ng-show="$last" ng-click="removeStep()">Remove</button>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="form-group col-md-3" ng-repeat="x in keywords">
        <div class="input-group">
        <input type="text" class="form-control input-lg" ng-model="x.value" id="{{x.id}}" placeholder="KeyWord" aria-describedby="addNew" set-focus="$index == focusIndex">
        <span class="input-group-addon glyphicon glyphicon-plus" id="addNew" ng-click="addNewKeyWord()" ng-show="$last"></span>
        <span class="input-group-addon glyphicon glyphicon-minus" id="removeNew" ng-click="removeKeyWord()" ng-show="$last"></span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="Notes"><h2>Chef's Notes</h2></label>
    <textarea class="form-control input-lg" rows="5" id="Notes" ng-model="notes"></textarea>
  </div>
  <button type="submit" class="btn btn-success btn-lg">Submit</button>
 </form>
</div>
