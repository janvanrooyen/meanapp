<!doctype html>
<html lang="en" ng-app="mean">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>janvanrooye.com</title>
  <!--  <link rel="stylesheet" href="css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/app.css" />
  </head>
  <body ng-cloak>  
  	<div ng-include="'/navigation'"></div>
    <div id="tabs" ng-controller="TabsCtrl" >
      <div class="container">
          <div class="row show-grid">
            <div class="col-md-4" ng-repeat="tab in tabs" ng-click="onClickTab(tab)" ng-cloak>
              <button type="button" class="btn btn-info btn-lg btn-block">
                <h1 class='{{tab.glyphicon}}'>{{tab.title}}</h1>
              </button>
            </div>       
          </div>
        <div id="recipesContainer" class="jumbotron">
          <div ng-include="currentTab"></div>
        </div>
      </div>
    </div>
      
    <script src="js/vendor/jquery.min.js"></script>
    <script src="js/vendor/what-input.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="js/vendor/angular.min.js"></script>
    <script src="js/app.js"></script>
  </body>
</html>
