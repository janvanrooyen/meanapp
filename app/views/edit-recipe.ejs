<!doctype html>   
<div ng-controller="RecipeViewController">
  <div>
  <form ng-submit="saveClient()">
  <div class="form-group">
    <div class="row">
      <div class="col-lg-4">
        <label for="title"><h2>{{selected.title}}</h2></label>
      </div>
      <div class="col-lg-6">
        </label><input type="text" class="form-control input-lg button" id="{{$id}}" name="Title" autofocus placeholder="Add a Title" ng-model="selected.title"> 
      </div>
      <div class="col-lg-2">
        <button type="submit" class="btn btn-primary button btn-lg">Submit</button>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <hr class="divider"></hr>
      </div>
    </div>
  </div>
  <div class="form-group"> 
    <label for="Ingredients"><h2>Ingredients</h2></label>
    <div class="form-group" ng-repeat="x in selected.ingredients">
      <input type="text" class="form-control input-lg" id="{{$id}}" placeholder="Enter an Ingredient" set-focus="$index == focusIndex" style="background-color:white" ng-model="x.value">
      <button type="button" class="btn btn-warning btn-lg" ng-show="$last" ng-click="addNewIngredient()">Add</button>
      <button type="button" class="btn btn-warning btn-lg" ng-show="$last" ng-click="removeIngredient()">Remove</button>
    </div>
  </div>
  <div class="form-group"> 
    <label for="Ingredients"><h2>Steps</h2></label>
    <div class="form-group" ng-repeat="x in selected.steps">
      <input type="text" class="form-control input-lg" id="{{$id}}" placeholder="Enter a Step" set-focus="$index == focusIndex" ng-model="x.value">
      <button type="button" class="btn btn-warning btn-lg" ng-show="$last" ng-click="addNewStep()">Add</button>
      <button type="button" class="btn btn-warning btn-lg" ng-show="$last" ng-click="removeStep()">Remove</button>
    </div>
  </div>
  <div class="form-group">
    <label for="Keywords"><h2>KeyWords</h2></label>
    <div class="row">
      <div class="form-group col-md-3" ng-repeat="x in selected.keywords">
        <div class="input-group">
        <input type="text" class="form-control input-lg" ng-model="x.value" id="{{$id}}" placeholder="KeyWord" aria-describedby="addNew" set-focus="$index == focusIndex">
        <span class="input-group-addon glyphicon glyphicon-plus" id="addNew" ng-click="addNewKeyWord()" ng-show="$last"></span>
        <span class="input-group-addon glyphicon glyphicon-minus" id="removeNew" ng-click="removeKeyWord()" ng-show="$last"></span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="Notes"><h2>Chef's Notes</h2></label>
    <textarea class="form-control input-lg" rows="5" id="{{$id}}" ng-model="selected.notes"></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-lg">Submit</button>
 </form>
 </div>  
</div>
