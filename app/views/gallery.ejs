<!doctype html>
<html lang="en" ng-app="gallery">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>janvanrooyen.com</title>
  <!--  <link rel="stylesheet" href="css/bootstrap.min.css" /> -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/app.css" />
  </head>
  <body ng-cloak>  
    <div ng-include="'/navigation'"></div>
    <div class="container jumbotron"> 
    <div class="container">
      <h1 class="text-center">Gallery's</h1>
    </div>
    <div class="container" ng-controller="Modal" id="gallery"> <!--Main Gallery Thumbnails-->
      <div class="row">
        <div class="col-md-4">
          <a data-toggle="modal" data-target="#myCarousel"><img src ="img/portfolio/childsplay/determination.jpg" class="img-thumbnail img-responsive" alt="Child's Play Gallery">
          <h2 class="text-center">Child's Play</h2></a>
        </div>
        <div class="col-md-4">
          <a data-toggle="modal" data-target="#FlowersModal"><img src="img/portfolio/flowers/goldenharvest.jpg" class="img-thumbnail img-responsive" alt="For the Love of Flowers Gallery">
          <h2 class="text-center">Love of Flowers</h2></a>
          <!--<a><img src ="img/portfolio/flowers/goldenharvest.jpg" class="img-thumbnail img-responsive" alt="For the Love of Flowers Gallery">
          <h2 class="text-center">Love of Flowers</h2></a> --> 
        </div>
        <div class="col-md-4">
          <a href="/gallery/lines"><img src ="img/portfolio/lines/departure.jpg" class="img-thumbnail img-responsive" alt="Many Lines Gallery">
          <h2 class="text-center">Many Lines</h2></a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <a href="nature"><img src ="img/portfolio/nature/img_2775.jpg" class="img-thumbnail img-responsive" alt="Images of Nature Gallery">
          <h2 class="text-center">Images of Nature</h2></a>
        </div>
        <div class="col-md-4">
          <a href="/gallery/randoms"><img src ="img/portfolio/randoms/ussmidway.jpg" class="img-thumbnail img-responsive" alt="Some Randoms Gallery">
          <h2 class="text-center">Just Some Randoms</h2></a>
        </div>
        <div class="col-md-4">
          <a href="/gallery/zoo"><img src ="img/portfolio/zoo/img_9404.jpg" class="img-thumbnail img-responsive" alt="And the Zoo Gallery">
          <h2 class="text-center">And the Zoo</h2></a>
        </div>
      </div>
    </div> <!-- .container -->
    </div> <!-- .jumbotron --> 
    <!-- Modal -->
    <div id="myCarousel" class="modal fade carousel slide" data-ride="carousel" role="dialog" ng-controller="Modal">
      <div class="modal-dialog">
      <!--Modal Content-->
        <div class="modal-content">
          <div class="modal-body">
            <div class="carousel-inner" role="listbox" ng-repeat="slide in thumbnail">  
              <div class="item" ng-class="{'active': $index == currentIndex}">
                <img ng-src="{{slide.url}}" class="img-responsive">
              </div>
            </div> <!--.carousel-inner -->
            <!-- Left / Right Scroll -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" ng-click="setIndex(currentIndex-1)">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" ng-click="setIndex(currentIndex+1)">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a> 
          </div> <!-- .modal-body-->
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="setIndex(0)">Close</button>
          </div>
        </div> <!-- .modal-content -->
      </div>  <!-- .modal-dialog -->
    </div>  <!-- .modal -->
        <!-- Modal Flowers -->
    <div id="FlowersModal" class="modal fade carousel slide" data-ride="carousel" role="dialog" ng-controller="Modal">
      <div class="modal-dialog">
      <!--Modal Content-->
        <div class="modal-content">
          <div class="modal-body">
            <div class="carousel-inner" role="listbox" ng-repeat="slide in flowers">  
              <div class="item" ng-class="{'active': $index == currentIndex}">
                <img ng-src="{{slide.url}}" class="img-responsive">
              </div>
            </div> <!--.carousel-inner -->
            <!-- Left / Right Scroll -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" ng-click="setIndex(currentIndex-1)">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" ng-click="setIndex(currentIndex+1)">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a> 
          </div> <!-- .modal-body-->
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="setIndex(0)">Close</button>
          </div>
        </div> <!-- .modal-content -->
      </div>  <!-- .modal-dialog -->
    </div>  <!-- .modal -->
    <div class="container" ng-controller="Modal"> <!-- anchor -->
      <div id="anchor" ng-include="include">
    </div>
    <script src="js/vendor/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="js/vendor/angular.min.js"></script>
    <script src="js/gallery.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.3.js"></script>
  </body>
</html>
